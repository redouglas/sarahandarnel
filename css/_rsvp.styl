$borderColor = #b5b5b5

section.rsvp
  background-color: $grey
  padding-bottom: 40px

  p.reminder
    margin-bottom: 40px
  form.loading
    pointer-events: none
    opacity: 0.3

  form.finished
    display: none

  .rsvp-success,
  .rsvp-error
    display: none

    &.show
      display: block

  .field
    margin-bottom: 40px

    label
      display: block
      text-transform: uppercase
      letter-spacing: 2px
      font-size: 11px
      margin-bottom: 2px
      font-weight: bold

      em.sub
        font-weight: normal

    input
      border: none
      border: 1px solid $borderColor

    input, textarea, select
      width: 100%
      font-family: 'Playfair Display'
      letter-spacing: 0.5px
      padding: 10px
      border-radius: 2px
      box-sizing: border-box
      font-size: 16px
      background: transparent
      outline: none

      &:focus
        background: $white
        box-shadow: 0 0 17px 1px $white;

    textarea
      height: 100px
      border: 1px solid $borderColor

    select
      border: none
      appearance: none
      background: transparent
      font-family: 'Playfair Display'

    .select-wrap
      position: relative
      height: 28px
      border: 1px solid $borderColor
      padding: 7px
      border-radius: 2px

      &:after
        content: ''
        z-index: 1
        position: absolute
        right: 12px
        top: 18px
        width: 0
        height: 0
        border-top: 8px solid $black
        border-left: 8px solid transparent 
        border-right: 8px solid transparent 

      select
        position: absolute
        width: 100%
        top: 0
        left: 0
        right: 0
        bottom: 0
        text-indent: 5px
