section.home

  .content-container
    position: absolute
    top: 70px
    left: 180px
    right: 180px
    bottom: 100px
    z-index: 1

    .content
      position: relative
      margin-top: 120px
      z-index: 2
      text-align: center


  .hero-text
    h1
      margin: 0
      font-weight: normal
      color: $black

      .top
        font-size: 45px

      .bottom
        margin-top: -40px
        font-size: 190px

    .subtext
      text-transform: uppercase
      color: $black
      margin-top: -10px
      font-weight: bold
      letter-spacing: 2px
      text-transform: uppercase
      font-size: 12px

  .hero-rsvp
    margin-top: 100px

    .timer
      font-weight: bold
      letter-spacing: 2px
      text-transform: uppercase
      font-size: 12px
      text-align: center
      right: 8px
      font-weight: bold

      .days
        font-weight: bold

  a.cta
    display: inline-block
    width: 186px
    height: 20px
    line-height: 20px
    margin-top: 10px

  .section-background
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    background-image: url('/img/hydrangea.jpg')
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    opacity: 0.4
