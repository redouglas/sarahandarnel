section.home

  .content-container
    position: absolute
    top: 70px
    left: 180px
    right: 180px
    bottom: 100px
    z-index: 1

    .content
      position: absolute
      top: 120px
      bottom: 30px
      right: 30px
      left: 30px
      z-index: 2
      text-align: center


  .hero-text
    position: absolute
    top: 50px
    left: 20%

    h1
      margin: 0
      line-height: 1
      font-weight: normal
      color: $black

      .top
        font-size: 45px

      .bottom
        font-size: 190px

    .subtext
      text-transform: uppercase
      text-align: right
      color: $black
      margin-top: -30px
      margin-right: 10px
      font-weight: bold
      letter-spacing: 2px
      text-transform: uppercase
      font-size: 12px

  .hero-rsvp
    position: absolute
    bottom: 40px
    left: 50%
    width: 216px
    margin-left: -108px
    height: 60px

    .timer
      text-transform: uppercase
      font-size: 10px
      letter-spacing: 2px
      text-align: center
      right: 8px
      font-weight: bold

      .days
        font-weight: bold

  a.cta
    position: absolute
    text-align: center
    left: 0
    right: 0
    bottom: 0
    width: 186px
    height: 20px
    line-height: 20px

  .section-background
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    background-image: url('/img/hydrangea.jpg')
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    opacity: 0.4
